'''
class Node:
    def __init__(self, data):
        self.data = data
        self.next = None
'''

class Solution:
    def rotate(self, head, k):
        if not head or not head.next or k == 0:
            return head
        
        length = 1
        tail = head
        while tail.next:
            tail = tail.next
            length += 1
        
        k = k % length
        if k == 0:
            return head
        
        curr = head
        for _ in range(k - 1):
            curr = curr.next
        
        new_head = curr.next
        curr.next = None 
    
        tail.next = head
        
        return new_head
