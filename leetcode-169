class Solution(object):
    def majorityElement(self, arr):
        """
        :type nums: List[int]
        :rtype: int
        """
        candidate = -1
        count = 0
        for num in arr:
            if count == 0:
                candidate = num
                count += 1
            elif num == candidate:
                count += 1
            else:
                count -= 1
        if arr.count(candidate) > len(arr) // 2:
            return candidate
        return -1
