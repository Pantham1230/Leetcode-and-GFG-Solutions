class Solution(object):
    def rob(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        if len(nums) == 1:
            return nums[0]
        def linear(arr):
            prev1 = prev2 = 0
            for n in arr:
                prev1, prev2 = max(prev1, prev2 + n), prev1
            return prev1
        return max(linear(nums[:-1]), linear(nums[1:]))
