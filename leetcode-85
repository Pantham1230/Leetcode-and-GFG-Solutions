class Solution(object):
    def maximalRectangle(self, matrix):
        """
        :type matrix: List[List[str]]
        :rtype: int
        """
        if not matrix or not matrix[0]:
            return 0
        rows = len(matrix)
        cols = len(matrix[0])
        heights = [0] * cols
        max_area = 0

        for i in range(rows):
            for j in range(cols):
                if matrix[i][j] == '1':
                    heights[j] += 1
                else:
                    heights[j] = 0
            stack = []
            for k in range(cols + 1):
                current_height = heights[k] if k < cols else 0
                while stack and current_height < heights[stack[-1]]:
                    h = heights[stack.pop()]
                    width = k if not stack else k - stack[-1] - 1
                    area = h * width
                    if area > max_area:
                        max_area = area
                stack.append(k)

        return max_area
