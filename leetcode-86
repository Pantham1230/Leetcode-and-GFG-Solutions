# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution(object):
    def partition(self, head, x):
        """
        :type head: Optional[ListNode]
        :type x: int
        :rtype: Optional[ListNode]
        """
        before = ListNode(0)
        after = ListNode(0)
        b = before
        a = after
        current = head
        while current:
            if current.val < x:
                b.next = current
                b = b.next
            else:
                a.next = current
                a = a.next
            current = current.next
        a.next = None
        b.next = after.next
        return before.next
